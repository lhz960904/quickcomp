{
  "name": "quickcomp",
  "version": "0.0.4",
  "description": "Make it easier to develop and build components",
  "bin": {
    "quickcomp": "bin/quickcomp"
  },
  "scripts": {
    "dev": "tsc -watch",
    "buld": "rm -rf lib types && tsc",
    "lint": "prettier --write --parser typescript \"src/**/*.ts\"",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "prepublishOnly": "yarn build && yarn changelog",
    "postpublish": "git add CHANGELOG.md && git commit -m 'chore: update changelog' && git push"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@storybook/addon-actions": "^5.3.18",
    "@storybook/addon-console": "^1.2.1",
    "@storybook/addon-info": "^5.3.18",
    "@storybook/react": "^5.3.18",
    "babel-loader": "^8.1.0",
    "chalk": "^4.0.0",
    "commander": "^5.1.0",
    "fs-extra": "^9.0.0",
    "glob": "^7.1.6",
    "react-docgen-typescript-loader": "^3.7.2",
    "ts-loader": "^7.0.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.0",
    "@types/glob": "^7.1.1",
    "conventional-changelog-cli": "^2.0.34",
    "lint-staged": "^10.2.4",
    "prettier": "^2.0.5",
    "yorkie": "^2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lhz960904/quickcomp.git"
  },
  "keywords": [],
  "files": [
    "lib",
    "bin",
    "src",
    "types"
  ],
  "author": "lihaozecq <lihaozecq@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lhz960904/quickcomp/issues"
  },
  "homepage": "https://github.com/lhz960904/quickcomp#readme"
}
