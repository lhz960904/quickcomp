{
  "name": "quickcomp",
  "version": "0.0.8",
  "description": "Make it easier to develop and build components",
  "bin": {
    "quickcomp": "bin/quickcomp"
  },
  "scripts": {
    "dev": "tsc -watch",
    "build": "rm -rf lib types && tsc",
    "lint": "prettier --write --parser typescript \"src/**/*.ts\"",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "prepublishOnly": "yarn build && yarn changelog",
    "postpublish": "git add CHANGELOG.md && git commit -m 'chore: update changelog' && git push"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@storybook/addon-actions": "^5.3.18",
    "@storybook/addon-console": "^1.2.1",
    "@storybook/addon-info": "^5.3.18",
    "@storybook/react": "^5.3.18",
    "babel-loader": "^8.1.0",
    "chalk": "^4.0.0",
    "commander": "^5.1.0",
    "ejs": "^3.1.3",
    "execa": "^4.0.2",
    "fs-extra": "^9.0.0",
    "glob": "^7.1.6",
    "gulp-if": "^3.0.0",
    "gulp-less": "^4.0.1",
    "gulp-typescript": "^6.0.0-alpha.1",
    "inquirer": "^7.1.0",
    "metalsmith": "^2.3.0",
    "ora": "^4.0.4",
    "react-docgen-typescript-loader": "^3.7.2",
    "through2": "^3.0.1",
    "ts-loader": "^7.0.4",
    "typescript": "^3.9.3"
  },
  "devDependencies": {
    "@types/babel__core": "^7.1.7",
    "@types/ejs": "^3.0.4",
    "@types/fs-extra": "^9.0.0",
    "@types/glob": "^7.1.1",
    "@types/gulp-less": "^0.0.31",
    "@types/inquirer": "^6.5.0",
    "@types/metalsmith": "^2.3.0",
    "@types/through2": "^2.0.36",
    "conventional-changelog-cli": "^2.0.34",
    "lint-staged": "^10.2.4",
    "prettier": "^2.0.5",
    "yorkie": "^2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lhz960904/quickcomp.git"
  },
  "keywords": [
    "react component",
    "cli",
    "quick"
  ],
  "files": [
    "lib",
    "bin",
    "src",
    "types"
  ],
  "author": "lihaozecq <lihaozecq@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lhz960904/quickcomp/issues"
  },
  "homepage": "https://github.com/lhz960904/quickcomp#readme"
}
